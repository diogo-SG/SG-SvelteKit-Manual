{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"bracketSameLine": true,
	"htmlWhitespaceSensitivity": "ignore",
	"singleAttributePerLine": true,
	"printWidth": 90,
	"embeddedLanguageFormatting": "auto",
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
